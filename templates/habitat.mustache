{{#hasRepresentationData}}
<div class="reportSection tableContainer">
  <h4>Habitat Representation</h4>
  <table data-paging="10">
    <thead>
      <tr>
        <th>Habitats</th>
        <th>Total HA Protected in All Areas</th>
        <th>Total % in All Areas</th>
        <th>Number of Sites Protected</th>
        <th>Adequately Represented?</th>
      </tr>
    </thead>
    <tbody>
      {{#representationData}}
      <tr>
        <td>{{HAB_TYPE}}</td>
        <td>{{CB_SIZE}}</td>
        <td>{{CB_PERC}}</td>
        <td>{{REP_COUNT}}</td>
        <td>??</td>
      </tr>
      {{/representationData}}
    </tbody>
    <tfoot>
      <tr>
        <td colspan="5" class="paragraph" style="text-align:left;">
          <p class="large">

            <strong>{{representedCount}}</strong>
            of <strong>{{habitatsCount}}</strong> habitats are adequately 
            protected.
          </p>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
{{/hasRepresentationData}}

