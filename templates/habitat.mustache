{{#isCollection}}
<div class="reportSection tableContainer">
  <h4>Habitat Representation</h4>
  <table data-paging="10">
    <thead>
      <tr>
        <th>Habitats</th>
        <th>Total Protected in Marine Reserves and Type-2 Areas Combined</th>
        <th>Number of Sites Protected</th>
        <th>Adequately Represented?</th>
      </tr>
    </thead>
    <tbody>
      {{#representationData}}
      <tr>
        <td>{{HabType}}</td>
        <td>{{Total}}</td>
        <td>{{NumSites}}</td>
        <td>{{Protected}}</td>
      </tr>
      {{/representationData}}
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4" class="paragraph" style="text-align:left;">
          <p class="large">
            <strong>{{representedCount}}</strong>
            of <strong>{{habitatsCount}}</strong> habitats are adequately 
            protected.
          </p>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
{{/isCollection}}

{{^isCollection}}
{{#adjacentProtectedAreas}}
<div class="reportSection">
  <h4>Adjacent Terrestrial Protected Area</h4>
  <p class="large green-check">
    This zone is adjacent to a <strong>Terrestrial Protected Area</strong>.
  </p>
</div>
{{/adjacentProtectedAreas}}
{{/isCollection}}